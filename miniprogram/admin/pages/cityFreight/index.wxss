/* miniprogram/address/pages/freight/index.wxss */
.city-freight{
  height: 100vh;
  width: 100vw;
  overflow-x: hidden;
  font-size: 28rpx;
  color: #222222;
  background: #E5E5E5;
  position: relative;
}

.item-wrapper{
  background: #ffffff;
  margin-top: 20rpx;
}

.item-line{
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 20rpx;
}

.item-line .item-title{
  width: 200rpx;
}

.item-line .item-content{
  flex-grow: 1;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.city-freight .item-wrapper .title{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #E5E5E5;
  margin: 0 20rpx;
  display: flex;
  align-items: center;
}

input.amount{
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.content{
  color: #888888;
  font-size: 24rpx;
  padding: 10rpx;
  line-height: 36rpx;
}

.citys{
  display: flex;
  flex-wrap: wrap;
  padding:0 20rpx 20rpx 20rpx;
}
.citys .city-item{
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  padding: 0 20rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  margin: 20rpx 20rpx 0 0;
  background:rgba(244,244,244,1);
  color: #888888;
  box-sizing: border-box;
}

.citys .city-item.active{
  color: #FF5644;
  border: 1rpx solid rgba(255,136,39,0.1);
  background: rgba(252,246,236,1);
  box-sizing: border-box;
}

.btns{
  display: flex;
  justify-content: space-between;
  align-items: center;

  padding: 20rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.btns .button{
  width: 300rpx;
  font-size: 400;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
}

.btns .button.reset{
  border: 1rpx solid #222222;
  background: #ffffff;
}

.btns .button.submit{
  background: #3d6034;
  color: #ffffff;
}