/* miniprogram/admin/pages/saleConfig/index.wxss */
.sale-config{
  height: 100vh;
  display: flex;
  overflow-x: hidden;
  flex-direction: column;
  font-size: 28rpx;
  color: #222222;
  background: #f4f4f4;
}

.sale-config .config-content{
  height: 100rpx;
  flex-grow: 1;
}

.sale-config .bottom{
  height: 100rpx;
  line-height: 100rpx;
  color: #ffffff;
  text-align: center;
  font-size: 40rpx;
  background: #3d6034;
  flex-shrink: 0;
  flex-grow: 0;
  }

  .item-wrapper{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    padding: 0 20rpx;
    background: #ffffff;
    margin-bottom: 20rpx;
  }

  .item-wrapper .title{
    width: 200rpx;
  }

  .rules-wrapper{
    margin-bottom: 20rpx;
    background: #ffffff;
  }

  .rule-item, .rule-content, .actions{
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .rule-item{
    padding: 0 20rpx;
    height: 100rpx;
    border-top: 1px solid #E5E5E5;
  }
  .rule-content input{
    flex-grow: 1;
    flex-shrink: 1;
    text-align: center;
  }

   .actions{
     width: 100rpx;
     flex-grow: 0;
     flex-shrink: 0;
     margin-left:20rpx;
   }

   .actions image{
     width: 30rpx;
     height: 30rpx;
     display: block;
   }

   .no-wrap {
     white-space: nowrap
   }