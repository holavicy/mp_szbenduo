/* miniprogram/address/pages/freight/index.wxss */
.index-config{
  height: 100vh;
  width: 100vw;
  overflow-x: hidden;
  font-size: 28rpx;
  color: #222222;
  background: #E5E5E5;
  position: relative;
}

.index-config .item-wrapper{
  background: #ffffff;
  margin-top: 20rpx;
}


.index-config .item-wrapper .title{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #E5E5E5;
  margin: 0 20rpx;
  display: flex;
  align-items: center;
}


.index-config .item-wrapper .contents{
  display: flex;
  flex-wrap: wrap;
  padding:0 20rpx 20rpx 20rpx;
}

textarea{
  padding: 20rpx;
  width: 100%;
}

.btns{
  display: flex;
  justify-content: space-between;
  align-items: center;

  padding: 20rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.btns .button{
  width: 300rpx;
  font-size: 400;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
}

.btns .button.reset{
  border: 1rpx solid #222222;
  background: #ffffff;
}

.btns .button.submit{
  background: #3d6034;
  color: #ffffff;
}