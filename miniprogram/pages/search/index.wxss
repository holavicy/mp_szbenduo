/* miniprogram/pages/home/index.wxss */

.home{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  overflow-x: hidden;
}
.search-wrapper{
  height: 60rpx;
  width: 100%;
  background: #3d6034;
  padding: 20rpx;
  position: relative;
  display: flex;
  margin-left: 20rpx;
}

.search-wrapper input{
  height: 100%;
  width: 640rpx;

  border-radius: 30rpx 0 0 30rpx;
  background: #ffffff;
  padding-left: 20rpx;
  font-size: 26rpx;
}

.search-wrapper .search{
  height: 100%;
  width: 70rpx;
  border-radius: 0 30rpx 30rpx 0;
  background: #ffffff;
  position: relative;

}

.search-wrapper image{
  display: block;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 10rpx;
  right: 15rpx;
}

.search-wrapper button{
  width: 200rpx;
  height: 100%;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}

.goods-wrapper{
  width: 100%;
  height: 800rpx;
  flex: 1;
  overflow-x: hidden;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.item{
  margin: 0 20rpx;
  border-bottom: 1rpx solid #E5E5E5;
}