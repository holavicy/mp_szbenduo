/* miniprogram/pages/goodsInfo/index.wxss */
.goods-info{
  background: #f4f4f4;
  height: 100vh;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
}
.goods-images{
  height: 750rpx;
  background-color: #ffffff;
}
.swiper-item{
  width: 620rpx;
  height: 620rpx;
  margin: 0 auto;
  margin-top: 65rpx;
  display: block;
}

.info{
  background-color: #ffffff;
  padding: 15rpx 20rpx;
  margin-top: 20rpx;
  flex-grow: 1;
}

.goods-price{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #3d6034;
}

.goods-price .price{
  font-size: 56rpx;
}

.goods-name{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 48rpx;
  margin-bottom: 20rpx;
}
.goods-des{
  font-size: 28rpx;
  color: #888888;
}

.bottom{
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  background: #ffffff;
  margin-top: 20rpx;
  align-items: center;
  padding-left: 20rpx;
}

.bottom .num-change{
  display: flex;
  width: 200rpx;
  justify-content: space-between;
  align-items: center;

}

.bottom .num-change image{
  width: 30rpx;
  height: 30rpx;
  display: block;
}

.bottom .num-change input{
  width: 80rpx;
  flex-shrink: 1;
  text-align: center;
  border: 1rpx solid #E5E5E5;
  border-radius: 12rpx;
  margin: 0 10rpx;
  flex-grow: 1;
}

.bottom .button{
  height: 100rpx;
  line-height: 100rpx;
  color: #ffffff;
  background: #3d6034;
  width: 200rpx;
  text-align: center;
}