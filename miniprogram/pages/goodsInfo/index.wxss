/* miniprogram/pages/goodsInfo/index.wxss */
.goods-info{
  background: #f4f4f4;
  height: 100vh;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
}
.goods-images{
  height: 750rpx;
  background-color: #ffffff;
}
.swiper-item{
  width: 620rpx;
  height: 620rpx;
  margin: 0 auto;
  margin-top: 65rpx;
  display: block;
}

.info{
  background-color: #ffffff;
  margin-top: 20rpx;
  flex-grow: 1;
}

.scroll-view{
  height: 300rpx;
  flex: 1;
}

.goods-price{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  background-image: linear-gradient(to bottom right, #3d6034, rgb(36, 153, 114));
  padding: 0 20rpx;
}

.goods-price .price{
  font-size: 56rpx;
}

.goods-name{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 48rpx;
  margin: 20rpx;
}
.goods-des{
  font-size: 28rpx;
  color: #888888;
  padding: 0 20rpx 20rpx 20rpx;
}

.bottom{
  display: flex;
  justify-content: space-between;
  background: #ffffff;
  margin-top: 20rpx;
  align-items: center;
  padding-left: 20rpx;
  height: 100rpx;
  flex-shrink: 0;
  flex-grow: 0;
}

.bottom.login{
  justify-content: flex-end;
}

.bottom .num-change{
  display: flex;
  justify-content: space-between;
  align-items: center;

}

.bottom .num-change image{
  width: 50rpx;
  height: 50rpx;
  display: block;
}

.bottom .num-change input{
  width: 142rpx;
  flex-shrink: 1;
  text-align: center;
  border: 1rpx solid #E5E5E5;
  border-radius: 12rpx;
  margin: 0 20rpx;
  flex-grow: 1;
  height: 50rpx;
  line-height: 50rpx;
}

.bottom .button{
  height: 100rpx;
  line-height: 100rpx;
  color: #ffffff;
  background: #3d6034;
  width: 220rpx;
  text-align: center;
}