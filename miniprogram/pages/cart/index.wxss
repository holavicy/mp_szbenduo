/* miniprogram/pages/cart/index.wxss */
.cart{
  width: 100vw;
  height: 100vh;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
}

.cart .list{
  height: 100rpx;
  flex-grow: 1;
  overflow-y: auto;
  margin-top: 20rpx;
}

.goods-group{
  width: 710rpx;
  margin: 0 auto;
}

.item{
  box-shadow: #E5E5E5 0 0 10rpx;
  margin-bottom: 20rpx;
  padding: 10rpx !important;
}

.cart .bottom{
  height: 100rpx;
  flex-shrink: 0;
  flex-grow: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: #E5E5E5 0 0 10rpx;
}

.cart .bottom .total{
  margin-left: 30rpx;
  color: #222222;
}
.price{
  color: #3d6034;
  font-weight: bold;
  font-size: 24rpx;
}
.cart .bottom .button{
  width: 212rpx;
  text-align: center;
  height: 100rpx;
  background: #3d6034;
  color: #ffffff;
  line-height: 100rpx;
  font-size: 32rpx;
}

.group-title{
  font-size: 28rpx;
  color: #222222;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #E5E5E5;
  display: flex;
  justify-content: space-between;
}

.group-title .delete-goods{
  color: #EE9922
}

.to-login{
  width:  230rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 0 auto;
  border-radius: 12rpx;
  background: #3d6034;
  color: #FFFFFF;
  font-size: 32rpx;
  margin-top: 600rpx;
}